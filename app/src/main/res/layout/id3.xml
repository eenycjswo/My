<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/vi1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF0000"
        android:layout_toRightOf="@+id/vi1"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#B50744FB"
        android:layout_toLeftOf="@+id/vi1"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#5AFF00"
        android:layout_above="@+id/vi1"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#C66011"
        android:layout_above="@+id/vi1"
        android:layout_toLeftOf="@+id/vi1"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#09A18A"
        android:layout_above="@+id/vi1"
        android:layout_toRightOf="@+id/vi1"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#7E0E0E"
        android:layout_below="@+id/vi1"
        android:layout_toLeftOf="@+id/vi1"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#835353"
        android:layout_below="@+id/vi1"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#AE3939"
        android:layout_below="@+id/vi1"
        android:layout_toRightOf="@+id/vi1"/>
</RelativeLayout>